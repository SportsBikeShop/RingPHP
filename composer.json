{
    "name": "guzzlehttp/ringphp",
    "description": "Provides a simple API and specification that abstracts away the details of HTTP into a single PHP function.",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Dowling",
            "email": "mtdowling@gmail.com",
            "homepage": "https://github.com/mtdowling"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/SportsBikeShop/streams"
        },
        {
            "type": "vcs",
            "url": "https://github.com/SportsBikeShop/promise"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "guzzlehttp/streams": "dev-sbs-fork",
        "react/promise": "dev-sbs-fork"
    },
    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "~4.0"
    },
    "suggest": {
        "ext-curl": "Guzzle will use specific adapters if cURL is present"
    },
    "autoload": {
        "psr-4": {
            "GuzzleHttp\\Ring\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GuzzleHttp\\Tests\\Ring\\": "tests/"
        }
    },
    "scripts": {
        "test": "make test",
        "test-ci": "make coverage"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
